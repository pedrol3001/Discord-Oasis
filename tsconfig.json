{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@error/*": ["error/*"],
      "@interfaces/*": ["interfaces/*"],
      "@oasis/*": ["oasis/*"],
      "@commands/*": ["oasis/commands/*"],
      "@plugins/*": ["oasis/plugins/*"],
      "@database/*": ["database/*"]
    },
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "importHelpers": true
  },
  "include": ["./src/"],
}
