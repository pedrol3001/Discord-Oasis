{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@error/*": ["error/*"],
      "@interfaces/*": ["interfaces/*"],
      "@oasis/*": ["oasis/*"],
      "@commands/*": ["oasis/commands/*"],
      "@plugins/*": ["oasis/plugins/*"],
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
